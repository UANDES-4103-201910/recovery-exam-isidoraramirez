<h1 style="text-align: center">Welcome to Joe's Pizzas!</h1>
<div class="col"></div>
<div class="col">
<div class="row">
    <% Pizza.all.each do |pizza| %>
       <div class="col-md-4 pizza" style="">
               
          <div class="card mb-4 box-shadow">
          	<%= link_to(pizza) do %>
          	<h2  style="text-align: center"><%= pizza.name %></h2><% end %>

          		<h6  style="text-align: center">$<%= pizza.crust.price + Recipe.where('id =  ' + pizza.recipe_id.to_s+'' ).first.price   %></h6>
                <div class="card-body" style="text-align: center">
                  <p class="card-text" ><% pizza.recipe.ingredients.each do |ingr|%>
                  <%= ingr.name %></p>
                  <% end %>
                  <%= pizza.crust.crust %>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      
                         <button type="button" class="btn btn-lg btn-outline-primary">Buy!</button>
                      
                      
                      
                    </div>
                  </div>
                </div>
              </div>
       </div>

            
    <% end %>            

</div>
</div>
<div class="col"></div>
